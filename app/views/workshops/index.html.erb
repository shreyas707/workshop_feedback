<p id="notice"><%= notice %></p>

<h1>Listing Workshops</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Token</th>
      <!--<th>User</th>-->
      <th>Department</th>
      <th>Allow access</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= workshop.title %></td>
        <td><%= workshop.description %></td>
        <td><%= workshop.start_date %></td>
        <td><%= workshop.end_date %></td>
        <td><%= workshop.token %></td>
        <!--<td><%#= workshop.user_id %></td>-->
        <td><%#= workshop.department_id %></td>
        <td><%= workshop.allow_access %></td>
        <td><%= link_to 'Show', workshop %></td>
        <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
        <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

