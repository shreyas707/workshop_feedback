<h3>Listing Users</h3>

<br/><br/>

<% if @users.empty? %>
	<p>No user found.</p>
<% else %>

	<table border = "1">
		<thead>
			<tr>
				<th>#</th>
				<th>User ID</th>
				<th>Username</th>
				<th>Email</th>
				<th>Show</th>
			</tr>
		</thead>

		<tbody>
			<% @users.each_with_index do |user,index|%>
			<tr>
				<td> <%= index + 1 %></td>
				<td> <%= user.id %> </td>
				<td> <%= user.username %></td>
				<td> <%= user.email %> </td>
				<td> <%= link_to "Show", user_path(user.id) %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
<h2><%= link_to "Add user", new_user_path, class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %></h2>